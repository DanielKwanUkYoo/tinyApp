<!DOCTYPE html>
<html lang = "en">
<head>
  <title>TinyApp</title>
</head>
<header>

    <% include ./partials/_header.ejs %>

</header>
<body>
    <h2><strong>Welcome to TinyApp!!</strong></h2>
        <% for (var link in urls) { %>
          <% if (user) { %>
          <ul>
            <li>
              <form method="POST" action="/urls/<%= link %>/delete">
              <%= link + ' : ' %> <a href="/u/<%= link %>">
              <%= urls[link] %> </a> &nbsp
              <a href="/urls/<%= link %>">edit</a>
              <input type="submit" value="delete">
              </form>
            </li>
          </ul>
        <% } %>
        <% } %>
    <form action="/urls/new" method="GET" name="AddNew">
      <input type="submit" value=AddNew>
    </form>
    <p>ShortUrls!</p>
    <hr>
    <% shortUrl.forEach(function (element) { %>

    <h4><a href="/u/<%= element %>"><%= element %></a></h4>
    <% }) %>

</body>
</html>
